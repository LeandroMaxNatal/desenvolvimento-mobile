<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="texto"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/edt_text"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/edt_text"
        android:layout_toStartOf="@+id/btn_invert"
        android:layout_toEndOf="@+id/txt_Label"
        />

    <Button
        android:id="@+id/btn_invert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inverter"
        android:layout_alignParentBottom="@id/edt_text"
        />

</RelativeLayout>